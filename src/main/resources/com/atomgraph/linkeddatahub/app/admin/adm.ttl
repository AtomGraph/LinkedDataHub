@base		<https://w3id.org/atomgraph/linkeddatahub/admin> .

@prefix :	<#> .
@prefix def:    <https://w3id.org/atomgraph/linkeddatahub/default#> .
@prefix rdf:	<http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:	<http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:	<http://www.w3.org/2001/XMLSchema#> .
@prefix owl:	<http://www.w3.org/2002/07/owl#> .
@prefix ldt:	<https://www.w3.org/ns/ldt#> .
@prefix dh:	<https://www.w3.org/ns/ldt/document-hierarchy/domain#> .
@prefix sp:	<http://spinrdf.org/sp#> .
@prefix spin:	<http://spinrdf.org/spin#> .
@prefix sioc:	<http://rdfs.org/sioc/ns#> .
@prefix foaf:	<http://xmlns.com/foaf/0.1/> .
@prefix lacl:	<https://w3id.org/atomgraph/linkeddatahub/admin/acl/domain#> .
@prefix lsm:	<https://w3id.org/atomgraph/linkeddatahub/admin/sitemap/domain#> .
@prefix apl:	<https://w3id.org/atomgraph/linkeddatahub/domain#> .
@prefix dct:	<http://purl.org/dc/terms/> .

: a owl:Ontology ;
    # foaf:isPrimaryTopicOf <ns> ;
    owl:imports apl:, lacl:, lsm: ;
    owl:versionInfo "1.1.4" ;
    rdfs:label "Admin ontology" ;
    rdfs:comment "AtomGraph admin application ontology" .

:Container a rdfs:Class ;
    rdfs:subClassOf dh:Container ;
    spin:constructor :DocumentConstructor ;
    # spin:constraint :MissingTitle ;
    apl:template def:ContainerChildren ;
    rdfs:label "Container" ;
    rdfs:isDefinedBy : .

:Item a rdfs:Class ;
    rdfs:subClassOf dh:Item ;
    spin:constructor :DocumentConstructor ;
    # spin:constraint :MissingTitle ;
    rdfs:label "Item" ;
    rdfs:isDefinedBy : .

:DocumentConstructor a sp:Construct ;
    sp:text """
        PREFIX rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
        PREFIX xsd:     <http://www.w3.org/2001/XMLSchema#>
        PREFIX dct:     <http://purl.org/dc/terms/>

        CONSTRUCT {
          ?this dct:title [ a xsd:string ] ;
              dct:description [ a xsd:string ] .
        }
        WHERE {}""" ;
    rdfs:label "Document constructor" ;
    rdfs:isDefinedBy : .

:MissingTitle a apl:MissingPropertyValue ;
    sp:arg1 dct:title ;
    rdfs:label "Missing title" ;
    rdfs:isDefinedBy : .

:Class a rdfs:Class ;
    rdfs:subClassOf lsm:Class ;
    ldt:fragment "id{slug}" ;
    ldt:fragment "this" ;
    rdfs:label "Class" ;
    rdfs:isDefinedBy : .

:Property a rdfs:Class ;
    rdfs:subClassOf lsm:Property ;
    ldt:fragment "id{slug}" ;
    rdfs:label "Property" ;
    rdfs:isDefinedBy : .

:Query a rdfs:Class ;
    rdfs:subClassOf lsm:Query ;
    ldt:fragment "id{slug}" ;
    rdfs:label "Query" ;
    rdfs:isDefinedBy : .

:Construct a rdfs:Class ;
    rdfs:subClassOf :Query, lsm:Construct ;
    rdfs:label "CONSTRUCT" ;
    rdfs:isDefinedBy : .

:Describe a rdfs:Class ;
    rdfs:subClassOf :Query, lsm:Describe ;
    rdfs:label "DESCRIBE" ;
    rdfs:isDefinedBy : .

:Select a rdfs:Class ;
    rdfs:subClassOf :Query ;
    rdfs:label "SELECT" ;
    rdfs:isDefinedBy : .

:Ask a rdfs:Class ;
    rdfs:subClassOf :Query ;
    rdfs:label "ASK" ;
    rdfs:isDefinedBy : .

:MissingPropertyValue a rdfs:Class ;
    rdfs:subClassOf lsm:MissingPropertyValue;
    ldt:fragment "id{slug}" ;
    ldt:fragment "this" ;
    rdfs:label "Missing property value" ;
    rdfs:isDefinedBy : .

:Ontology a rdfs:Class ;
    rdfs:subClassOf lsm:Ontology ;
    ldt:fragment "id{slug}" ;
    rdfs:label "Ontology" ;
    rdfs:isDefinedBy : .

#:Restriction a rdfs:Class ;
#    rdfs:subClassOf lsm:Restriction ;
#    ldt:fragment "id{slug}" ;
#    rdfs:label "Restriction" ;
#    rdfs:isDefinedBy : .

:Authorization a rdfs:Class ;
    rdfs:subClassOf lacl:Authorization ;
    ldt:fragment "id{slug}" ;
    apl:template :AuthorizationAgents ;
    rdfs:label "Authorization" ;
    rdfs:isDefinedBy : .

:AuthorizationAgents a apl:Content ;
    rdf:first :SelectAuthorizationAgents ;
    rdf:rest :AuthorizationAccessTo ;
    rdfs:isDefinedBy : .

:SelectAuthorizationAgents a sp:Select ;
    dct:title "Select agents" ;
    sp:text """
PREFIX  foaf: <http://xmlns.com/foaf/0.1/>
PREFIX  acl:  <http://www.w3.org/ns/auth/acl#>

SELECT DISTINCT  ?agent
WHERE
{ GRAPH ?authGraph
  { ?this  foaf:primaryTopic  ?auth .
    ?auth  acl:agent          ?agent
  }
}
""" ;
    rdfs:isDefinedBy : .

:AuthorizationAccessTo a apl:Content ;
    rdf:first :SelectAuthorizationAccessTo ;
    rdf:rest rdf:nil ;
    rdfs:isDefinedBy : .

:SelectAuthorizationAccessTo a sp:Select ;
    dct:title "Select access resources" ;
    sp:text """
PREFIX  foaf: <http://xmlns.com/foaf/0.1/>
PREFIX  acl:  <http://www.w3.org/ns/auth/acl#>

SELECT DISTINCT  ?accessTo
WHERE
{ GRAPH ?authGraph
  { ?this  foaf:primaryTopic  ?auth .
    ?auth  acl:accessTo       ?accessTo
  }
}
""" ;
    rdfs:isDefinedBy : .

:CreatorAuthorization a rdfs:Class ;
    rdfs:subClassOf lacl:CreatorAuthorization ;
    ldt:fragment "id{slug}" ;
    rdfs:label "Creator authorization" ;
    rdfs:isDefinedBy : .

:AuthorizationRequest a rdfs:Class ;
    rdfs:subClassOf lacl:AuthorizationRequest ;
    ldt:fragment "id{slug}" ;
    rdfs:label "Authorization request" ;
    rdfs:isDefinedBy : .

:UserAccount a rdfs:Class ;
    rdfs:subClassOf lacl:UserAccount ;
    ldt:fragment "id{slug}" ;
    rdfs:label "User account" ;
    rdfs:isDefinedBy : .

:Agent a rdfs:Class ;
    rdfs:subClassOf lacl:Agent ;
    ldt:fragment "id{slug}" ;
    rdfs:label "Agent" ;
    rdfs:isDefinedBy : .

:Person a rdfs:Class ;
    rdfs:subClassOf lacl:Person, :Agent ;
    rdfs:label "Person" ;
    rdfs:isDefinedBy : .

:PublicKey a rdfs:Class ;
    rdfs:subClassOf lacl:PublicKey ;
    ldt:fragment "id{slug}" ;
    rdfs:label "Public key" ;
    rdfs:isDefinedBy : .

:Group a rdfs:Class ;
    rdfs:subClassOf lacl:Group ;
    ldt:fragment "id{slug}" ;
    rdfs:label "Group" ;
    rdfs:isDefinedBy : .


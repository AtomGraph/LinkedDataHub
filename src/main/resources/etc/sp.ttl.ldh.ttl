@base           <http://spinrdf.org/sp> .

@prefix :       <#> .
@prefix rdf:	<http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:	<http://www.w3.org/2000/01/rdf-schema#> .
@prefix ldh:	<https://w3id.org/atomgraph/linkeddatahub#> .
@prefix sp:	<http://spinrdf.org/sp#> .
@prefix spin:	<http://spinrdf.org/spin#> .
@prefix dct:	<http://purl.org/dc/terms/> .

_:MissingRDFSLabel a ldh:MissingPropertyValue ;
    rdfs:label "Missing rdfs:label" ;
    sp:arg1 rdfs:label .

_:MissingSPText a ldh:MissingPropertyValue ;
    rdfs:label "Missing sp:text" ;
    sp:arg1 sp:text .

# QUERY

:Query spin:constructor [
        a sp:Construct ;
        sp:text """
          PREFIX rdfs:    <http://www.w3.org/2000/01/rdf-schema#>
          PREFIX xsd:     <http://www.w3.org/2001/XMLSchema#>
          PREFIX sp:      <http://spinrdf.org/sp#>

          CONSTRUCT {
              ?this rdfs:label [ a xsd:string ] ;
                  rdfs:comment [ a xsd:string ] ;
                  sp:text [ a xsd:string ] .
          }
          WHERE {}"""
    ] ;
    spin:constraint _:MissingRDFSLabel, _:MissingSPText .

    <queries/select-instances-in-graphs/#this> a sp:Select ;
        dct:title "Select instances in graphs" ;
        dct:description "Selects instances of type from named graphs" ;
        sp:text """SELECT DISTINCT ?s
WHERE
  { GRAPH ?g
      { ?s  a   $type ;
            ?p  ?o
      }
  }""" .

}


@prefix def:	<ns/default#> .
@prefix dh:	<https://www.w3.org/ns/ldt/document-hierarchy/domain#> .
@prefix dct:	<http://purl.org/dc/terms/> .
@prefix sioc:	<http://rdfs.org/sioc/ns#> .

<messages/> a def:Container ;
    sioc:has_parent <> ;
    dh:select <queries/default/select-children/#this> ;
    dct:title "Messages" ;
    dct:description "Decentralized messaging" .

<messages/sent/> a def:Container ;
    sioc:has_parent <messages/> ;
    dh:select <queries/default/select-children/#this> ;
    dct:title "Sent messages" .

<messages/received/> a def:Container ;
    sioc:has_parent <messages/> ;
    dh:select <queries/default/select-children/#this> ;
    dct:title "Received messages" .